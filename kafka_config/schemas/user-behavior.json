{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "eventType": {
      "type": "string",
      "enum": ["VIEW", "LIKE", "CLICK", "SEARCH", "COMMENT"]
    },
    "userId": {
      "type": "string"
    },
    "postId": {
      "type": "string"
    },
    "sessionId": {
      "type": "string"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "searchQuery": { "type": "string" },
        "viewDuration": { "type": "number" },
        "clickPosition": { "type": "number" }
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["eventType", "userId", "timestamp"]
}