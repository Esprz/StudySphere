{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "eventType": {
      "type": "string",
      "enum": ["POST_CREATED", "POST_UPDATED", "POST_DELETED"]
    },
    "postId": {
      "type": "string"
    },
    "userId": {
      "type": "string"
    },
    "content": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "body": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["eventType", "postId", "userId", "timestamp"]
}